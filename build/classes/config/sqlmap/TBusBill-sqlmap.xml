<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="busBill">
	<resultMap class="com.hansy.transaction.model.vo.TBusBillVo" id="busBillVoResultMap">
